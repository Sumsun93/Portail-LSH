#content
	margin-top: 5vh
	display: flex
	justify-content: center
	max-height: 15em

#discord
	display: none
	margin-right: 5vw

	iframe
		height: 100%

#server
	margin-left: 5vw
	width: 70%
	background-color: #7289da
	border-radius: .5em
	padding: 1em
	font-size: .7em
	display: flex
	flex-direction: column
	justify-content: space-around
	color: white

	a
		display: none

	p
		text-align: left
		margin-bottom: .2em

	h3
		text-align: center
		font-size: 1.3em
		margin-bottom: 1em

@media only screen and (min-width: 768px)
	#content
		margin-top: 0

	#discord
		display: block
		height: 50vh

	#server
		width: auto

		a
			display: block
